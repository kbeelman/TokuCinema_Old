@model IEnumerable<TokuCinema.Models.VideoVersionType>

@{
    Layout = "~/Views/Shared/_Layout_Front.cshtml";
    ViewBag.Title = "Search Results";
}

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12 page-header">
                <h1>@ViewBag.Title</h1>
                <h3>You searched for "@ViewBag.queryId"</h3>
            </div>
        </div>
        <!-- /.row -->

        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
            <!-- Project One -->
                <div class="row">
                    <div class="col-md-7">
                        <a href="#">
                            <img class="img-responsive" src="@item.VideoMedia.Medium.MediaImageLink" alt="Picture for @item.VideoVersionTitle">
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3>@Html.DisplayFor(modelItem => item.VideoVersionTitle)</h3>
                        <h4>Original Title: @Html.DisplayFor(modelItem => item.VideoMedia.Medium.MediaOfficialTitle)</h4>
                        <p>@Html.DisplayFor(modelItem => item.VideoVersionDescription)</p>
                        @Html.ActionLink("View Details", "Details", "VideoMedias", new { id = item.VideoMedia.VideoMediaId }, null)
                    </div>
                </div>
            <!-- /.row -->
                <hr>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-7">
                    <p class="lead">Unfortunately no search results were returned.</p>
                    <p class="info">Try being less specific (i.e. Instead of "Godzilla vs. The Smog Monster" just try "Smog Monster" or "Hedora")</p>
                </div>
            </div>

            <hr />
        }

        <div class="form-group-sm">
            <input style="width: 200px;" type="search" id="searchBox" class="form-control" placeholder="Search again...">
        </div>

    </div>