@model IEnumerable<TokuCinema.Models.MediaFile>

@{
    ViewBag.Title = "Media File Index";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MediaFile1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoRelease.CatalogCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*Display picture if picture, do nothing if video - we can change this later*@
            @if (item.MediaFile1 != null && item.Image == true)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(item.MediaFile1,0,item.MediaFile1.Length)" width="100" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Video)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoRelease.CatalogCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MediaFielId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MediaFielId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MediaFielId })
        </td>
    </tr>
}

</table>
