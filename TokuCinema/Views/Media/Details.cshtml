@model TokuCinema.Models.Medium

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Front.cshtml";

    // Get VideoMedia Version Types
    TokuCinema.Models.TokuCinema_DataEntities db = new TokuCinema.Models.TokuCinema_DataEntities();
    TokuCinema.Models.VideoMedia thisVideoMedia = db.VideoMedias.Where(id => id.MediaId == Model.MediaId).FirstOrDefault();
    List<TokuCinema.Models.VideoVersionType> videoVersionTypes = db.VideoVersionTypes.Where(id => id.VideoMediaId == thisVideoMedia.VideoMediaId).ToList();

}

<h2>Media Details</h2>

    <!-- Page Content -->
<div class="container">
    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @Html.DisplayFor(model => model.MediaOfficialTitle)
            </h1>
        </div>
    </div>
    <!-- /.row -->
    <!-- Portfolio Item Row -->
    <div class="row">
        <div class="col-md-8">
            @if (Model.MediaImageLink != null)
            {
                <img class="img-responsive" src="@Model.MediaImageLink" alt="@Html.DisplayFor(model => model.MediaOfficialTitle)">
            }
            else
            {
                <img class="img-responsive" src="http://placehold.it/750x500" alt="@Html.DisplayFor(model => model.MediaOfficialTitle)">
            }
        </div>
        <div class="col-md-4">
            <h3>@Html.DisplayNameFor(model => model.MediaDescription)</h3>
            @Html.DisplayFor(model => model.MediaDescription)
            <h3>Details</h3>
            <ul>
                <li>
                    <label>@Html.DisplayNameFor(model => model.WikipediaLink)</label>
                    <a href="@Html.DisplayFor(model => model.WikipediaLink)" target="_blank"> @Html.DisplayFor(model => model.MediaOfficialTitle)</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">Versions</h3>
        </div>
            @foreach (var item in videoVersionTypes)
            {
                <div class="col-sm-3 col-xs-6">
                    @Html.ActionLink(item.VideoVersionTitle, "Details", "VideoVersionTypes", new { id = item.VideoVersionTypeId }, null)
                        <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </div>
            }
    </div>
    <!-- /.row -->
    <hr>
</div>
<!-- /.container -->

<p>
    @Html.ActionLink("Back to List", "Index", "Dashboard")
</p>
