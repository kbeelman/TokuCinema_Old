@model IEnumerable<TokuCinema.Models.Media>

@{
    ViewBag.Title = "Media Index";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MediaOfficialTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MediaDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WikipediaLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MediaOfficialTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MediaDescription)
        </td>
        <td>
            <a href="@Html.DisplayFor(model => item.WikipediaLink)" target="_blank">Wikipedia Link</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MediaId }) |
            @Html.ActionLink("Details", "Details", new { id = item.MediaId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MediaId })
        </td>
    </tr>
}

</table>
